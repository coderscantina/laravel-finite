{
    "name": "coderscantina/laravel-finite",
    "type": "library",
    "description": "A finite state machine for your Laravel/Eloquent models.",
    "keywords": [
        "state",
        "finite",
        "laravel",
        "eloquent",
        "state-machine"
    ],
    "homepage": "https://github.com/coderscantina/laravel-finite",
    "license": "MIT",
    "authors": [
        {
            "name": "Michael Wallner",
            "email": "m.wallner@coderscantina.com"
        }
    ],
    "require": {
        "php": "^8.1|^8.2|^8.3|^8.4",
        "illuminate/support": "^10.0||^11.0||^12.0"
    },
    "require-dev": {
        "graham-campbell/testbench": "^6.2",
        "phpunit/phpunit": "^10.0||^11.0",
        "squizlabs/php_codesniffer": "^3.9"
    },
    "autoload": {
        "psr-4": {
            "CodersCantina\\LaravelFinite\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CodersCantina\\LaravelFinite\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.0-dev"
        },
        "laravel": {
            "providers": [
                "CodersCantina\\LaravelFinite\\ServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true
    }
}
