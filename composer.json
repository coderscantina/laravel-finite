{
    "name": "neon/finite",
    "type": "library",
    "description": "A finite state machine for your Laravel/Eloquent models.",
    "keywords": [
        "neon",
        "state",
        "finite",
        "laravel"
    ],
    "homepage": "https://git.neonblack.at/neon/finite",
    "license": "MIT",
    "authors": [
        {
            "name": "Michael Wallner",
            "email": "m.wallner@neonblack.at"
        }
    ],
    "require": {
        "php": "~7.0",
        "illuminate/support": "^5.4||^6.0"
    },
    "require-dev": {
        "graham-campbell/testbench": "^5.4",
        "phpunit/phpunit": "~5.0||~6.0||~7.0||~8.0",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "Neon\\Finite\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Neon\\Finite\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        },
        "laravel": {
            "providers": [
                "Neon\\Finite\\ServiceProvider"
            ]
        }
		},
    "config": {
        "sort-packages": true
    }
}
